{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "npx prisma generate && ts-node-dev ./src/index",
    "lint": "eslint --ext .ts,.tsx --fix src/",
    "prettify": "prettier --write src/",
    "fmt-lint": "yarn run prettify && yarn run lint",
    "start": "ts-node ./src/index.ts",
    "seed": "npx prisma migrate reset && ts-node prisma/seed.ts",
    "build": "tsc",
    "deploy": "npx prisma generate && node ./dist/src/index.js",
    "test": "dotenv -e .env.test jest --watch && dotenv -e .env.test -- npx prisma migrate reset -f",
    "migrate:postgres": "dotenv -e .env.test -- npx prisma migrate dev --name postgres-init && dotenv -e .env -- npx prisma migrate dev --name postgres-init",
    "reset:postgres": "dotenv -e .env.test -- npx prisma migrate reset && dotenv -e .env -- npx prisma migrate reset"
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "@types/express": "^4.17.13",
    "@types/graphql-fields": "^1.3.4",
    "apollo-server": "^3.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.0",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "graphql": "15.7.2",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.13.6",
    "prisma": "^3.5.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.0.7",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "typegraphql-prisma": "^0.17.0",
    "typescript": "^4.4.4"
  }
}
